# Setup custom Docker bridge
docker network create --driver=bridge --subnet=192.168.84.0/24 ba-dev 

# Setup self-signed SSL certificates
mkdir certs
cd certs
curl -JLO "https://dl.filippo.io/mkcert/latest?for=linux/amd64"
mv mkcert-v*-linux-amd64 mkcert
chmod +x mkcert
./mkcert -cert-file localhost.pem -key-file localhost-key.pem localhost
./mkcert -install
rm mkcert
cd ..

# Install app dependencie
npm install

# Build the app
./build
